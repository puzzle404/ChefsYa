<div class="sign-up-container">
  <div class="sign-up-banner">
    <img src="https://images.rappi.com/cms-web/images/sign-in_3f701ac0c6.png" alt="banner">
  </div>

  <div class="sign-up-form mt-5">
    <h2 class= "text-center"><strong>¿Olvidaste tu contraseña?</strong></h2>


<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs mt-4">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "", class: "input is-info" },
                label_html: { class: "label"} %>

  </div>

  <div class="form-actions mb-3">
    <%= f.button :submit, "Enviarme instrucciones cambio contraseña", class: "button is-info is-rounded btn-signup " %>

  </div>
<% end %>


    <%= render "devise/shared/links" %>



  </div>
</div>
