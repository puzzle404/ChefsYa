<div class="sign-up-container">
  <div class="sign-up-banner">
    <img src="https://images.rappi.com/cms-web/images/sign-in_3f701ac0c6.png" alt="banner">
  </div>

  <div class="sign-up-form mt-5">
    <h2 class= "text-center"><strong>Logueate</strong></h2>


<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs mt-4">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "", class: "input is-info" },
                label_html: { class: "label"} %>

    <%= f.input :password,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "", class: "input is-info" },
                label_html: { class: "label"} %>

    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions mb-3">
    <%= f.button :submit, "Sign in", class: "button is-info is-rounded btn-signup " %>

  </div>
<% end %>

    <%= render "devise/shared/links" %>



  </div>
</div>
