<div class="description-card border-bottom py-4 mt-3">
  <div class="">
    <h2>Acerca de <%= @chef.first_name %></h2>
    <div class="d-flex justify-content-between alto-iconos">
      <p class="bio-card"><%= @chef.bio %></p>
       <div class=""><h2 class=" ">Tipo de cocina</h2>
        <div class="d-flex icons-cat">
          <% @categories.each do |cat| %>
        <div>
          <%= image_tag "#{cat.category}.jpg", style: "width: 50px", style: "height: 50px" %>
          <h5><%= cat.category %></h5>
        </div>
          <% end %>
      </div>
      </div>
    </div>
  </div>
</div>
<h1 class="mt-3 mb-3">Elegí tu plato</h1>
<h6 class="mb-4">Podés seleccionar una opción por categoría</h6>
<div class="container border-top">
  <div class=" border row justify-content-center ">
   <% @dishes.each do |dish| %>
  <div class="cards card mt-4 mr-3 col-6 " style="max-width: 620px;">
        <div class="row no-gutters">
          <div class="col-md-4">
            <img src="https://www.holidify.com/images/cmsuploads/compressed/shoyu-ramen_20181227133143.jpg" alt="dish photo">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title"><%= dish.title  %></h5>
                <p><%= dish.chef.first_name  %></p>
                <p class="card-text"><%= dish.description %></p>
                <p class="card-text"><%= dish.price  %></p>
                <p class="card-text"><small class="text-muted"><%= dish.category %></small></p>
            </div>
          </div>
      </div>

    </div>
<% end %>
