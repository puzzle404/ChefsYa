<div class="container mt-5 border border-secondary p-4 rounded" style="width:650px">
  <h1>Nuevo Plato</h1>


  <%= simple_form_for (@dish), url: dish_path do |f| %>
  <%= f.input :title, placeholder: 'Ingrese el nombre del plato' %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :category, collection: ["peruana" , "italiana", "mexicana", "asiatica", "thai", "china", "mediterranea" ], input_html: {class: 'test'} %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.submit "Editar", class: "btn btn-success px-4", style:"width:100%;"%>
  <% end %>
</div>


<script>
  var div =  document.querySelector('.dish_category');
  div.classList.remove('select');

  var label = document.querySelector('.dish_category>label');
  label.classList.remove('select')
</script>
