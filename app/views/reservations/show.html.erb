
<div class="container justify-content-center  ">
 <div class="align-middle">
 </div>
    <h1 class="text-center mt-4">Reserva</h1>
      <div class="cards card mt-4 mx-auto " style="max-width: 550px;">
        <div class="row no-gutters">
          <div class="col-md-8">
            <div class="card-body">
              <% @selected_dishes.each do |selected| %>
                <% @dishes.each do |dish| %>
                  <div>
                  <%= dish.photo.key %>
                  <h4><%= dish.title if dish.id == selected.dish_id %></h4>

                  </div>
                <% end %>
              <% end %>
              <p class="card-title"><b>Cliente: <%= @reservation.user_id  %> </b></p>
              <p class="card-text">Fecha de la reserva:<%= @reservation.reservation_date %></p>
              <p class="card-text">Observaciones del cliente:<%= @reservation.observations %></p>
            </div>
          </div>
        </div>
      </div>
  </div>
