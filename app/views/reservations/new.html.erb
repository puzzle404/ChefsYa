<div class="container m-4">
  <h1>Nueva Reserva</h1>
</div>

<div class="container">
<%= simple_form_for[@user, @reservation] do |f| %>
<%= f.input :reservation_date, placeholder: 'Selecciona la fecha deseada' %>
<%= f.input :observations %>
<%= f.association :user %>
<%= f.submit "Reservar", class: "btn btn-primary"%>
<% end %>
</div>
